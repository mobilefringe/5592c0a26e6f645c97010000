        </script>
    </ul>
    <div class="page_banner" id="banner_container">
        <script id="banner_template" type="x-tmpl-mustache/text">
            {{name}}
        </script>
    </div>
    <div class="inside_page_content">
        <div class="left_column">
            <div class="promo_list_div" id="promo_container">
                <script id="promo_template" type="x-tmpl-mustache/text">
                    <div class="promo_inside_content">
                        <div class="promo_desc_box">
                            <a href="../jobs/{{slug}}"><p class="promo_header right_column_header">{{name}}</p></a>
                            <p class="directory_content promo_date"><a href="/stores/{{store_detail_btn}}">{{store_name}}</a><br>{{job_type}}</p>
                            <strong>Closing Date: </strong>{{dates}}
                        </div>
